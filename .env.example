# Engram API Configuration
# Defaults to https://api.openengram.ai if not set
NEXT_PUBLIC_ENGRAM_API_URL=https://api.openengram.ai
NEXT_PUBLIC_ENGRAM_USER_ID=your-user-id

# Server-side only (never exposed to browser â€” used by /api/engram proxy)
ENGRAM_API_URL=https://api.openengram.ai
ENGRAM_API_KEY=your-api-key-here
ENGRAM_USER_ID=your-user-id

# Optional: JWT secret for full signature verification in middleware/proxy
# Without this, middleware still validates token expiry (decode-only)
JWT_SECRET=

# Engram Code Service (semantic code search)
NEXT_PUBLIC_ENGRAM_CODE_URL=https://code.openengram.ai

# GA4 Analytics
NEXT_PUBLIC_GA_ID=

# OpenPanel Analytics
NEXT_PUBLIC_OPENPANEL_CLIENT_ID=

# Edition: "local" (default, self-hosted) or "cloud" (managed SaaS)
# Controls sidebar navigation, page access, and default feature flags at build time.
# The /v1/instance/info API can override feature flags at runtime.
NEXT_PUBLIC_EDITION=local

# Legacy (deprecated, use NEXT_PUBLIC_EDITION instead)
# NEXT_PUBLIC_DEPLOYMENT_MODE=cloud
